---
import { CollectionEntry } from 'astro:content';
import { formatDate } from '../js/utils';

const { entry } = Astro.props;

interface Props {
  entry: CollectionEntry<'blog'>;
}
---

<a href={`/innlegg/${entry.slug}`}>
  <div class="image">
    <img src={entry.data.image.src} alt={entry.data.image.alt} loading="lazy" />
  </div>
  <div class="content">
    <div class="text">
      <p>{formatDate(entry.data.date)}</p>
      <h3>{entry.data.title}</h3>
    </div>
  </div>
</a>

<style>
  a {
    --br: 1rem;
    display: flex;
    gap: 1rem;
    width: 100%;
    background-color: var(--clr-neutral-200);
    color: var(--clr-neutral-900);
    text-decoration: none;
    border-radius: 1rem;
    transition: background-color 250ms ease-out, color 250ms ease-out,
      transform 250ms ease-out;
  }

  a:hover {
    background-color: var(--clr-purple-200);
    color: var(--clr-purple-900);
    transform: translateY(-2px);
  }

  a:focus {
    outline: 2px solid var(--clr-purple-500);
    outline-offset: 1px;
  }

  a:active {
    background-color: var(--clr-purple-100);
  }

  .image {
    flex-shrink: 0;
    height: 6rem;
    aspect-ratio: 1900 / 1425;
  }

  img {
    border-radius: var(--br);
    height: 100%;
    object-fit: cover;
  }
  .content {
    display: flex;
    height: 6rem;
    padding: 0.875rem 0;
    margin-right: 1rem;
    flex-direction: column;
    gap: 1rem;
  }
  h3,
  p {
    margin: 0;
  }

  h3 {
    font-size: 1.25rem;
    font-weight: 700;
  }

  p {
    font-size: 0.875rem;
  }
</style>
