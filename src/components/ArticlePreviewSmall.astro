---
import { CollectionEntry } from 'astro:content';
import RoundedButton from './RoundedButton.astro';
import { Image } from '@astrojs/image/components';
const { entry } = Astro.props;

interface Props {
  entry: CollectionEntry<'blog'>;
}
---

<article>
  <div class="image">
    <a href={`/innlegg/${entry.slug}`}>
      <Image
        src={entry.data.image.src}
        alt={entry.data.image.alt}
        width={416}
        height={234}
        format="webp"
      />
    </a>
  </div>
  <div class="content">
    <div class="text">
      <h3>{entry.data.title}</h3>
      <p>{entry.data.description}</p>
    </div>
    <RoundedButton
      style="primary"
      text="Les innlegget"
      href={`/innlegg/${entry.slug}`}
    />
  </div>
</article>

<style>
  article {
    --br: 1rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 26rem;
    margin-inline: auto;
  }

  article:hover {
    outline: 2px solid var(--clr-neutral-200);
    outline-offset: 0.5rem;
    border-radius: 1.25rem;
  }

  article:focus-within {
    outline: 2px solid var(--clr-neutral-400);
    outline-offset: 0.5rem;
    border-radius: 1.25rem;
  }

  img {
    border-radius: var(--br);
    width: 100%;
    aspect-ratio: 16/9;
    object-fit: cover;
  }
  .content {
    display: flex;
    height: 100%;
    flex-direction: column;
    gap: 1rem;
    justify-content: space-between;
  }
  h3,
  p {
    margin: 0;
  }

  h3 {
    font-size: 1.5rem;
    font-weight: 700;
  }

  p {
    font-size: 1.25rem;
  }
</style>
