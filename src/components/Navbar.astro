---
import { Icon } from 'astro-icon';
---

<header>
  <div class="wrapper">
    <a href="/" class="logo">
      <div class="logomark">
        <Icon name="icon" />
      </div>
      <div class="textmark">Myrstadbloggen</div>
    </a>
    <nav>
      <ul>
        <li><a href="/">Hjem</a></li>
        <li><a href="/om">Om bloggen</a></li>
        <li><a href="/innlegg/">Innlegg</a></li>
      </ul>
    </nav>
    <button>
      <Icon name="uil:bars" />
    </button>
  </div>
</header>

<style>
  header {
    background-color: var(--clr-neutral-900);
    color: var(--clr-neutral-100);
    padding-inline: 1rem;
  }

  .wrapper {
    display: flex;
    justify-content: space-between;
    max-width: 82rem;
    margin-inline: auto;
    height: 4rem;
  }

  .logo {
    display: flex;
    gap: 1rem;
    font-size: 1.5rem;
    align-items: center;
    font-weight: 600;
  }

  .logo svg {
    height: 3rem;
    width: 3rem;
  }

  button {
    all: unset;
    display: none;
  }

  button svg {
    width: 3rem;
    height: 3rem;
  }

  nav {
    margin-block: auto;
  }

  ul {
    display: flex;
    gap: 4rem;
  }

  li {
    list-style: none;
  }

  a {
    color: inherit;
    text-decoration: none;
    font-size: 1.25rem;
    font-weight: 600;
  }

  @media screen and (max-width: 900px) {
    nav {
      display: none;
    }

    button {
      display: block;
    }
  }

  @media screen and (max-width: 500px) {
    .textmark {
      display: none;
    }
  }
</style>
