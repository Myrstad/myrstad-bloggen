---
import MainLayout from '../../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
//const tags = [...new Set(posts.map((post) => post.data.tags).flat())];

const tagsArray = [posts.map((post) => post.data.tags).flat()][0];
const tagCount = tagsArray.reduce((acc, tag) => {
  if (acc[tag]) {
    acc[tag] += 1;
  } else {
    acc[tag] = 1;
  }
  return acc;
}, {});

const sortedTags = Object.entries(tagCount).sort(
  (a: any, b: any) => b[1] - a[1]
);

console.log(sortedTags);
---

<MainLayout
  title="Alle emnene | Myrstadbloggen"
  description="Leter du etter informasjon eller et innlegg som omhandler et spessielt emne? SÃ¥ finner du det her!"
