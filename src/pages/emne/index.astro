  <div class="flex-container">
    {
      sortedTags.map((tag) => (
        <RoundedButton
          style="tertiary"
          href={`/emne/${tag[0]}/`}
          text={`${tag[0]} (${tag[1]})`}
        />
      ))
    }
  </div>
